@model IEnumerable<EventEasePoe.Models.Venue>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Venues" asp-action="Index">
    <p>
        <label>Event Name: <input type="text" name="SearchString" /></label>
        <input type="submit" value="Filter" />

    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VenueName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VenueCapcity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageURL)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VenueName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VenueCapcity)
                </td>
            <td>
                    <!-- Displaying the image instead of the URL -->
                    @if (!string.IsNullOrEmpty(item.ImageURL))
                    {
                        <img src="@item.ImageURL" alt="Venue Image" style="max-width: 150px; height: auto;" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
            </td>
           
            <td>
                <a asp-action="Edit" asp-route-id="@item.VenueID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VenueID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VenueID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
